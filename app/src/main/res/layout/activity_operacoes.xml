<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFCF00"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        app:srcCompat="@drawable/investalogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipoOperacao"
        android:text="TIPO DA OPERAÇÃO"
        android:textSize="32sp"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número da Conta Origem"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/numeroContaOrigem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="number"
        android:fontFamily="sans-serif-light"
        android:hint="Digite o número da conta"
        android:minHeight="48dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelContaDestino"
        android:text="Número da Conta Destino"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/numeroContaDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="number"
        android:fontFamily="sans-serif-light"
        android:hint="Digite o número da conta"
        android:minHeight="48dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="numberDecimal"
        android:fontFamily="sans-serif-light"
        android:hint="Digite o valor a ser "
        android:minHeight="48dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnOperacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Realizar Operação"
        android:textColor="#FFFFFF" />

</LinearLayout>